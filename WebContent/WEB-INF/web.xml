<?xml version="1.0" encoding="UTF-8"?>

<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
 xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
 http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
 version="4.0"
 metadata-complete="true">
	
	<servlet>
		<servlet-name>Accueil</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Accueil</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Accueil</servlet-name>
		<url-pattern>/index</url-pattern>
	</servlet-mapping>
	
	<!-- CONNEXION  -->
	<servlet>
		<servlet-name>Connexion</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Connexion</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Connexion</servlet-name>
		<url-pattern>/connexion</url-pattern>
	</servlet-mapping>
	
	<!-- INSCRIPTION  -->
	<servlet>
		<servlet-name>Inscription</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Inscription</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Inscription</servlet-name>
		<url-pattern>/inscription</url-pattern>
	</servlet-mapping>
	
	<!-- CATEGORIES PRODUITS -->
	<servlet>
		<servlet-name>Fruits</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Fruits</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Fruits</servlet-name>
		<url-pattern>/fruits</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>Legumes</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Legumes</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Legumes</servlet-name>
		<url-pattern>/legumes</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>Salades</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.Salades</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>Salades</servlet-name>
		<url-pattern>/salades</url-pattern>
	</servlet-mapping>
	
	<!-- INTERFACE ADMIN -->
	<servlet>
		<servlet-name>IndexAdmin</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.IndexAdmin</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>IndexAdmin</servlet-name>
		<url-pattern>/admin/index</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>InsertAdmin</servlet-name>
		<servlet-class>com.fruitsmarket.servlets.InsertAdmin</servlet-class>
		<multipart-config>
            <location>C:\Users\Nass\fichierstmp</location> <!-- A adapter chez vous -->
            <max-file-size>10485760</max-file-size> <!-- 10 Mo -->
            <max-request-size>52428800</max-request-size> <!-- 5 x 10 Mo -->
            <file-size-threshold>1048576</file-size-threshold> <!-- 1 Mo -->
        </multipart-config>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>InsertAdmin</servlet-name>
		<url-pattern>/admin/insert</url-pattern>
	</servlet-mapping>
	
	<!-- Balise JSP config qui permet d'inclure au débuts en priorité le fichier /WEB-INF/taglibs.jsp sur tout nos fichier JSP-->
	<jsp-config>
		<jsp-property-group>
			<url-pattern>*.jsp</url-pattern>
			<include-prelude>/WEB-INF/taglibs.jsp</include-prelude>
		</jsp-property-group>
	</jsp-config>
</web-app>